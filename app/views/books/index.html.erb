<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th><%= t('view.title') %></th>
      <th><%= t('view.memo') %></th>
      <th><%= t('view.author') %></th>
      <th><%= t('view.picture') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to t('view.show'), book %></td>
        <td><%= link_to t('view.edit'), edit_book_path(book) %></td>
        <td><%= link_to t('view.destroy'), book, method: :delete, data: { confirm: t('view.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

